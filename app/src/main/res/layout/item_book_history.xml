<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--To show pdf and progress for book load-->
        <RelativeLayout
            android:id="@+id/bookRl"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:background="@color/gray02"
            android:layout_marginEnd="5dp">
            <!--Book View-->
            <ImageView
                android:id="@+id/coverBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"/>
        </RelativeLayout>

        <!--TextView: Book Title-->
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Judul Buku"
            android:layout_toEndOf="@id/bookRl"
            android:maxLines="1"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_toEndOf="@id/bookRl">
            <!--Date Rent-->
            <TableRow>
                <TextView
                    android:id="@+id/dateRentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="Tanggal Pinjam"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/dateRentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="dd/MM/yyy"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
            </TableRow>

            <!--Date Due-->
            <TableRow>
                <TextView
                    android:id="@+id/dateDueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="Tanggal Tenggat "
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/dateDueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="dd/MM/yyy"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
            </TableRow>

            <!--Date Return-->
            <TableRow>
                <TextView
                    android:id="@+id/dateReturnLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="Tanggal Kembali"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/dateReturnTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:text="dd/MM/yyy"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"/>
            </TableRow>
        </TableLayout>

        <!--TextView: Keterangan Stock-->
        <TextView
            android:id="@+id/stockTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="Status : "
            android:layout_toEndOf="@id/bookRl"
            android:layout_alignParentBottom="true"
            android:maxLines="1"/>

        <!--TextView: Stock-->
        <TextView
            android:id="@+id/stockCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_toEndOf="@id/stockTv"
            android:text="N/A"
            android:layout_alignParentBottom="true"
            android:maxLines="1"/>

        <!--TextView: Book Code-->
        <TextView
            android:id="@+id/codeBookTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="XXXX"
            android:layout_toStartOf="@id/categoryTv"
            android:layout_toEndOf="@id/stockCountTv"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"/>

        <!--TextView: Book Category-->
        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="Kategori"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>